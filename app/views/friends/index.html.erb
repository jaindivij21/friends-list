<% if user_signed_in? %>
  <h1>List of Friends</h1>
  <br>
  <div id="friends">
    <table class="table table-striped table-bordered">
      <thead class="table-dark">
        <tr>
          <th> Name </th>
          <th> Email </th>
          <th> Phone Number </th>
          <th> Twitter </th>
        </tr>
      </thead>
      <tbody>
        <% @friends.each do |friend| %>
          <% if friend.user == current_user %>
            <%= render friend %>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
  <br>
  <%= link_to "New friend", new_friend_path, class: "btn btn-dark btn-md" %>
<% else %>
  <h1 class="display-1"> Friends List</h1>
  <p class="lead"> A application to keep a track of all your friends and their information âœ¨ </p>
<% end %>