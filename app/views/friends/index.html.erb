<h1>List of Friends</h1>
<br>
<div id="friends">
  <table class="table table-striped table-bordered">
    <thead class="table-dark">
      <tr>
        <th> First Name </th>
        <th> Last Name </th>
        <th> Email </th>
        <th> Phone Number </th>
        <th> Twitter </th>
        <th colspan="1"></th>
      </tr>
    </thead>
    <tbody>
      <% @friends.each do |friend| %>
      <%= render friend %>
      <% end %>
    </tbody>
  </table>
</div>
<br>
<%= link_to "New friend", new_friend_path, class: "btn btn-dark btn-md" %>